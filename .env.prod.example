# =====================
# Ambiente Produção - Necessito
# Copiar para .env.prod e ajustar valores reais
# NUNCA COMMITAR .env.prod
# =====================

# --- Django / App ---
DJANGO_SECRET_KEY=CHANGE_ME_SECURE_RANDOM_64CHARS
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=necessito.online,www.necessito.online
DJANGO_TIMEZONE=America/Sao_Paulo
LOG_LEVEL=INFO

# --- Banco de Dados ---
POSTGRES_DB=necessito_prod
POSTGRES_USER=necessito_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG
POSTGRES_HOST=db
POSTGRES_PORT=5432
# Variáveis compatibilidade (Django DATABASES fallback)
DB_NAME=${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_HOST=${POSTGRES_HOST}
DB_PORT=${POSTGRES_PORT}
# Se usar dj-database-url pode montar: DATABASE_URL=postgres://necessito_user:CHANGE_ME_STRONG@db:5432/necessito_prod

# --- Redis / Cache / Celery ---
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# --- Segurança / Proxy ---
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# --- Emails (ajustar conforme provedor) ---
EMAIL_HOST=smtp.seuprovedor.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=no-reply@necessito.online
EMAIL_HOST_PASSWORD=CHANGE_ME_EMAIL
DEFAULT_FROM_EMAIL=Necessito <no-reply@necessito.online>

# --- Monitoramento (opcional) ---
SENTRY_DSN=

# --- Outras integrações (placeholder) ---
API_EXTERNAL_BASE_URL=
API_EXTERNAL_TOKEN=

# --- Celery Ajustes ---
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_ACKS_LATE=True
CELERY_TASK_TIME_LIMIT=300

# --- Django Settings Extras ---
ALLOWED_CORS_ORIGINS=https://necessito.online
CSRF_PROD_ORIGINS=https://necessito.online,https://www.necessito.online

# --- Projeto Compose ---
COMPOSE_PROJECT_NAME=necessito_prod

# --- CI/CD Configuration ---
REGISTRY_IMAGE=ghcr.io/necessito/necessito-web
IMAGE_TAG=latest

# --- Application Version & Environment ---
VERSION=1.0.0
ENVIRONMENT=production
