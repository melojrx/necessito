  "shortcuts": [
    {
      "name": "Criar Necessidade",
      "short_name": "Criar",
      "description": "Criar uma nova necessidade",
      "url": "/necessidades/criar/",
      "icons": [
        {
          "src": "/static/img/icons/shortcut-create.png?v=1.3.6",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Buscar Serviços",
      "short_name": "Buscar",
      "description": "Buscar necessidades disponíveis",
      "url": "/necessidades/",
      "icons": [
        {
          "src": "/static/img/icons/shortcut-search.png?v=1.3.6",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mensagens",
      "short_name": "Chat",
      "description": "Ver conversas ativas",
      "url": "/chat/",
      "icons": [
        {
          "src": "/static/img/icons/shortcut-chat.png?v=1.3.6",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "categories": ["business", "productivity", "social"],
  
  "screenshots": [
    {
  "src": "/static/img/screenshots/desktop-1.png?v=1.3.6",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
  "src": "/static/img/screenshots/mobile-1.png?v=1.3.6",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  
  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+indicai",
      "url": "/handle?type=%s"
    }
  ],
  
  "prefer_related_applications": false,
  
  "file_handlers": [
    {
      "action": "/handle-file/",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": ["window-controls-overlay", "standalone", "browser"]
}